
@{
    ViewData["Title"] = "Students List";
}

@section Styles {
    <link rel="stylesheet" href="~/css/user-view.css" />
}

<div>
    <button class="btn waves-effect app-accent">
        Add student
    </button>

    <div class="row">
        <div class="col s12 l4">
            <div class="card">
                <div class="card-content">
                    <h1 class="bold-text card-title">
                        Student List
                        <span class="row right small">Practice Hours: <span class="bold">This Week</span></span>
                    </h1>
                    
                    <div class="col s12 divider mt-2 mb-6"></div>

                    <ul class="collection">
                        <li class="active collection-item avatar">
                            <a href="#" class="clickable-list">
                                <img src="@Url.Content("~/images/photos/anne.png")" class="circle">
                                <span class="title">Anne Campbell</span>
                                <p>Guitarist</p>
                            </a>
                            <span class="secondary-content">6.5 hours</span>
                        </li>
                        <li class="collection-item avatar">
                            <a href="#" class="clickable-list">
                                <img src="@Url.Content("~/images/photos/user1.png")" class="circle">
                                <span class="title">Peter Evans</span>
                                <p>Drummer</p>
                            </a>
                            <span class="secondary-content">3 hours</span>
                        </li>
                        <li class="collection-item avatar">
                            <a href="#" class="clickable-list">
                                <img src="@Url.Content("~/images/photos/user6.png")" class="circle">
                                <span class="title">Sarah Brown</span>
                                <p>Pianist</p>
                            </a>
                            <span class="secondary-content">2.5 hours</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col s12 l8">
            <partial name="_UserView" />
        </div>
    </div>
</div>

<partial name="_TaskForm" />

@section Scripts {
    <script type="text/javascript" src="~/js/form-extension.js"></script>
    <script type="text/javascript" src="~/js/Students/student-info.js"></script>
    <script type="text/javascript" src="~/js/Students/tasks.js"></script>
}