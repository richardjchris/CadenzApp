@{
    ViewBag.Title = "Practice Log";
}

@section Styles {
    <link rel="stylesheet" href="~/lib/materialize/vendors/select2/select2-materialize.css" />
}

<button class="waves-effect waves-light btn" onclick="toggle()">Toggle Display</button>
<div>    
    <div class="row">
        <div id="pracHours">
            <div style="float: left">
                <div class="card">
                    <img src="@Url.Content("~/images/practiceHours2.png")">
                </div>
            </div>
        </div>
        <div id="tableDisplay">
            <div class="col s12 m7 l8">
                <div class="card">
                    <div class="card-content">
                        <h4 class="card-title center">Practice Log</h4>
                        <div class="divider mb-2"></div>
                        <div id="table-wrapper" class="display-none">
                            <table id="table" class="display">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Length</th>
                                        <th>Instrument</th>
                                        <th>Song</th>
                                        <th>Description</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col s12 m5 l4" style="float: right">
            <div class="card">
                <div class="card-content">
                    <h4 class="card-title">Add Practice Session</h4>
                    <div class="divider mb-2"></div>
                    <partial name="_Forms" />
                </div>
                <div class="card-action center">
                    <button class="addBtn btn border-round grey darken-1 waves-effect waves-light">Add</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/lib/materialize/vendors/select2/select2.full.min.js"></script>
    <script type="text/javascript" src="~/js/form-extension.js"></script>
    <script type="text/javascript" src="~/js/Practice/practice-log.js"></script>
}